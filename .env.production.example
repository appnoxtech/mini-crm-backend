# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env.production and fill in your production values

# Database Configuration
DATABASE_URL="postgresql://user:password@your-db-host:5432/crm?schema=public"

# Server Configuration
PORT=4000
NODE_ENV=production
FRONTEND_URL=https://app.appnox.ai

# JWT Configuration (Use strong, random values!)
JWT_SECRET=generate-a-64-char-random-string-here
TOKEN_ENCRYPTION_KEY=generate-another-64-char-random-string-here

# ==============================================
# EMAIL TRACKING CONFIGURATION (IMPORTANT!)
# ==============================================
# This MUST be your production API domain for tracking to work
# The domain should match or be related to your email sending domain
# to avoid spam filters

TRACKING_BASE_URL=https://api.engineersarmy.com

# Examples:
# - If API is at api.appnox.ai, use: https://api.appnox.ai
# - If you want a dedicated subdomain: https://track.appnox.ai
# - NEVER use localhost or ngrok in production!

# ==============================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://api.engineersarmy.com/api/emails/oauth/gmail/callback

# ==============================================
# SMTP CONFIGURATION
# ==============================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@appnox.ai
SMTP_PASS=your-smtp-password

# ==============================================
# AI CONFIGURATION
# ==============================================
GROQ_API_KEY=your-groq-api-key
AI_SUGGESTION_MODEL=llama-3.3-70b-versatile
AI_SUGGESTION_TEMPERATURE=0.7

# ==============================================
# TWILIO CONFIGURATION
# ==============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY_SID=your-twilio-api-key-sid
TWILIO_API_KEY_SECRET=your-twilio-api-key-secret
TWILIO_TWIML_APP_SID=your-twilio-twiml-app-sid
TWILIO_CALLER_ID=+1234567890
TWILIO_RECORDING_ENABLED=true
TWILIO_TRANSCRIPTION_ENABLED=false
TWILIO_RECORDING_CHANNELS=dual
TWILIO_WEBHOOK_BASE_URL=https://api.engineersarmy.com

# ==============================================
# AWS S3 CONFIGURATION
# ==============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-bucket-name
